@model ChurchSite.Areas.Admin.ViewModels.BookMassVM
@{
    ViewBag.Title = "Mass booking payment page";
    Layout = "~/Views/Shared/_FrontLayout.cshtml";
}

<!-- ======= Breadcrumbs ======= -->
<section id="breadcrumbs" class="breadcrumbs">
    <div class="container">

        <div class="d-flex justify-content-between align-items-center">
            <h2>Book Mass</h2>
            <ol>
                <li><a href="~/Home">Home</a></li>
                <li>Book Mass</li>
            </ol>
        </div>
    </div>
</section><!-- End Breadcrumbs -->

<section id="contact" class="contact">
    <div class="container">
        <div class="row">
            <div class="col-sm-4">
                @Html.Partial("_SpotLight")
            </div>
            <div class="col-sm-8" section-title aos-init aos-animate" data-aos="fade-up">
                <div class="mt-5" data-aos="fade-up">
                    @using (Html.BeginForm("BookMass", "Application", FormMethod.Post, new { @class = "validate", novalidate = true }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="main-card mb-3 card">
                            <div class="card-body">
                                <h5 class="card-title text-center">Mass Booking Form</h5>
                                <p class="text-danger text-center" style="font-size:12px">Please, make finalize payment of amount to complete this form</p>
                                <div class="position-relative form-group">
                                    <label for="Name" class="col-form-label">Name</label><span class="text-danger">*</span>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text">
                                                <i class="ion-person"></i>
                                            </div>
                                        </div>
                                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Name", required = true, @readonly = true } })
                                        <div class="valid-feedback">
                                            Nice name!
                                        </div>
                                        <div class="invalid-feedback">
                                            Name required
                                        </div>
                                    </div>
                                </div>
                                <div class="position-relative form-group">
                                    <label for="For" class="col-form-label">For</label><span class="text-danger">*</span>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text">
                                                <i class="ion-person"></i>
                                            </div>
                                        </div>
                                        @Html.EditorFor(model => model.For, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter For", required = true, @readonly = true } })
                                        <div class="valid-feedback">
                                            Nice name!
                                        </div>
                                        <div class="invalid-feedback">
                                            For required
                                        </div>
                                    </div>
                                </div>

                                <div class="position-relative form-group">
                                    <label for="Amount" class="col-form-label">Amount</label><span class="text-danger">*</span>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text">
                                                <i class="ion-android-phone-portrait"></i>
                                            </div>
                                        </div>
                                        @Html.EditorFor(model => model.AmountStr, new
                                   {
                                       htmlAttributes = new
                                       {
                                           @class = "form-control input-mask-trigger",
                                           data_inputmask = "'alias': 'numeric', 'groupSeparator': ',', 'autoGroup': true, 'digits': 2, 'digitsOptional': false, 'prefix': '₦', 'placeholder': '0'",
                                           im_insert = "true",
                                           style = "text-align: right;",
                                           @readonly = true
                                       }
                                   })
                                        <div class="valid-feedback">
                                            Nice!
                                        </div>
                                        <div class="invalid-feedback">
                                            Amount required
                                        </div>
                                    </div>
                                </div>

                                <div class="text-center"><button class="btn btn-dark btn-block" type="button" id="generateInvoice" name="Submit"> Generate invoice</button></div>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <div class="col-sm-8 mt-3" section-title aos-init aos-animate" data-aos="fade-up" style="display:none" id="InvoiceDiv">
                <div class="main-card mb-3 card">
                    <div class="card-body ">
                        <div id="InvoiceDiv" class="col-md-12 invoice_con ">

                            <p class="text-info text-center mb-3 control-label">Make transfer to the Account Number below or click on the checkout link below to pay through Monnify Interface.</p><br />
                            <p class="text-center"><a class="text-dark" href="#"><label for=""><strong>DESCRIPTION:  </strong></label> <span class="" id="Description"></span></a></p>
                            <p class="text-center"><a class="text-dark" href="#"><label for=""><strong>INVOICE  REFERENCE: </strong></label> <span class="" id="InvoiceReference"></span></a></p>
                            <p class="text-center"><a class="text-dark" href="#"><label for=""><strong>ACCOUNT NUMBER:  </strong></label> <span class="" id="AccountNumber"></span></a></p>
                            <p class="text-center"><a class="text-dark" href="#"><label for=""><strong>ACCOUNT NAME: </strong></label> <span class="" id="AccountName"></span></a></p>
                            <p class="text-center"><a class="text-dark" href="#"><label for=""><strong>BANK NAME: </strong></label> <span class="" id="BankName"></span></a></p>
                            <p class="text-center"><a class="text-dark" href="#"><label for=""><strong>BANK CODE: </strong></label> <span class="" id="BankCode"></span></a></p>
                            <p class="text-center"><a class="text-dark" href="#"><label for=""><strong>NAME: </strong></label> <span class="" id="StudentName"></span></a></p>
                            <p class="text-center"><a class="text-dark" href="#"><label for=""><strong>EMAIL: </strong></label> <span class="" id="StudentEmail"></span></a></p>
                            <p class="text-center"><a class="text-dark" href="#"><label for=""><strong>INVOICE EXPIRY DATE: </strong></label><span class="" id="ExpiryDate"></span></a></p>
                            <br />
                            <div class="btn btn-success btn-block" style="color: white !important" id="link">
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>

@section Scripts{
    <script src="~/Scripts/BookMass.js"></script>
}
