@model ChurchSite.Areas.Admin.ViewModels.SpiritualistVM
<div class="modal fade" id="Create" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Create Spiritualist</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            @using (Html.BeginForm("CreateSpiritualist", "Spiritualist", FormMethod.Post, new { area = "Admin", @class = "validate", novalidate = true, enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <div class="position-relative form-group">
                        <label for="LogoInp" class="col-form-label">Image</label><span class="text-danger">*</span>
                        <small class="form-text text-muted">Image proportion should not pass 540px x 360px</small>
                        <img class="img-responsive img-thumbnail" id="Image" src="#" onchange="ShowPreview(this)" onerror="this.src='/Contents/images/images.png'" alt="Logo" />
                        <div class="custom-file">
                            <input type="file" class="custom-file-input" id="ImageInp" name="image" onchange="readImageURL(this)" />
                            <label class="custom-file-label" for="customFile">Select file</label>
                        </div>
                    </div>

                    <div class="position-relative form-group">
                        <label for="Firstname" class="col-form-label">Name</label><span class="text-danger">*</span>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <div class="input-group-text">
                                    <i class="ion-person"></i>
                                </div>
                            </div>
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter name", required = true } })
                            <div class="valid-feedback">
                                Nice name!
                            </div>
                            <div class="invalid-feedback">
                                Name required
                            </div>
                        </div>
                    </div>
                    <div class="position-relative form-group">
                        <label for="Lastname" class="col-form-label">Role</label><span class="text-danger">*</span>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <div class="input-group-text">
                                    <i class="ion-person"></i>
                                </div>
                            </div>
                            @Html.EditorFor(model => model.Role, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter role", required = true } })
                            <div class="valid-feedback">
                                OK!
                            </div>
                            <div class="invalid-feedback">
                                Role required
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="ladda-button btn btn-shadow btn-primary" data-style="zoom-in">
                        <span class="ladda-label">Save</span>
                        <span class="ladda-spinner"></span>
                    </button>
                </div>
            }
        </div>
    </div>
</div>




